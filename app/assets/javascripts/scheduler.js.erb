$(document).ready(function(){

  $('#appointmentModal').on('show.bs.modal', function (event) {
    var link = $(event.relatedTarget);
    var date = link.data('date');
    var modal = $(this);
    $.get( Routes.new_appointment_path({date: date}))
    .done(function(data){
      modal.find('.modal-body').html(data)
    });
  });

});
